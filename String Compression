#include <iostream>
#include <string>
using namespace std;

string compressString(const string& s) {
    string result = "";
    int n = s.length();

    for (int i = 0; i < n; i++) {
        int count = 1;

        // Count consecutive repeating characters
        while (i + 1 < n && s[i] == s[i + 1]) {
            count++;
            i++;
        }

        result += s[i];  // add character
        if (count > 1)   // add count only if > 1
            result += to_string(count);
    }

    // Return the shorter version
    return (result.length() < s.length()) ? result : s;
}

int main() {
    string s;
    cout << "Enter a string: ";
    cin >> s;

    cout << "Compressed string: " << compressString(s) << endl;
    return 0;
}
